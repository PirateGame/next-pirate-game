generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model player {
  name     String
  gameName String
  money    Int
  bank     Int
  board    Json
  shield   Int
  mirror   Int
  ship     Int
  captain  Int
  host     Boolean
  token    String
  id       Int     @unique(map: "player.id_unique") @default(autoincrement())
  game     game    @relation(fields: [gameName], references: [name], onDelete: Cascade, map: "player_ibfk_1")

  @@index([gameName], map: "gameName")
}

model game {
  name           String   @unique(map: "Game.name_unique")
  sizeX          Int
  sizeY          Int
  quickPlay      Boolean
  decisionTime   Int
  turnNumber     Int
  tiles          Json
  tilesRemaining Json
  scoreHistory   Json
  queue          Json
  playerLimit    Int
  randomiseOnly  Boolean
  state          Int
  player         player[]
}
